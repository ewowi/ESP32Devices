{
  "name": "esp32devices",
  "version": "1.0.0",
  "description": "ESP32 Device Monitor",
  "main": "ESP32Devices.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "ewowi",
  "license": "GPL-v3",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.esp32devices.app",
    "productName": "ESP32 Device Monitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icon.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ewowi/ESP32Devices.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/ewowi/ESP32Devices/issues"
  },
  "homepage": "https://github.com/ewowi/ESP32Devices#readme",
  "dependencies": {
    "ws": "^8.18.3"
  }
}
